<% content_for :page_title do %>
  <i class="icon-picture"></i> <%= t(:pictures_for) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to t(:back_to_orders_list), admin_orders_path, :icon => 'icon-arrow-left' %></li>
<% end %>

<%= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Pictures' } %>

<%#= image_tag(@pictures.first.attachment.url(:large)) %>
<% @pictures.each do |picture| %>
	<%= image_tag(picture.attachment.url(:large)) %>
	<p>
	 	<%= link_to "Original Photo", picture.attachment.url(:original) %>
  </p>
<% end %>
