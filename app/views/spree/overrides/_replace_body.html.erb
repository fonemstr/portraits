<body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">
<header id="header" class="container <%= @body_id || 'default' %>" data-hook="home_header">
  <div class="masthead row">
    <div class='span4'>
      <%= image_tag 'store/logo_blue.png' %>
    </div>
    <div id="header-menu" class='span8'>
      <ul class="nav nav-pills ">
        <li><%= link_to 'Home', spree.root_path %></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact</a></li>
        <%= render :partial => 'spree/shared/login_bar' %>
        <li id="link-to-cart" data-hook><%= link_to_cart %></li>     
      </ul>
   </div>
  </div>
</header>
<div id="wrapper" class="container">
  <% if content_for?(:hero_unit) %>
    <%= yield :hero_unit %>
  <% end %>
     
  <% if content_for?(:sidebar) %> 
    <div id="content" class="row" data-hook>
      <aside id="sidebar" class="span2" data-hook>
      <%= yield :sidebar %>
      </aside>
      <div class="<%= !content_for?(:sidebar) ? "span12" : "span10" %>">
      <%= breadcrumbs(@taxon) %>
      <%= flash_messages %>
      <%= yield %>
      </div>
    </div>
  <% else %>
    <div id="content">
      <%= breadcrumbs(@taxon) %>
      <%= flash_messages %>
      <%= yield %>
    </div>
  <% end %>   
</div>
<footer id="footer" data-hook>
  <div class="container">
    <div class='row'>
      <div class="span3" data-hook>
        <h4>Product</h4>
        <ul class="unstyled">
          <li><%= link_to 'Home', spree.root_path %></li>
          <li><a href="#">FAQ</a></li>
       
        </ul>
      </div>
      <div class="span3" data-hook>
        <h4>More</h4>
        <ul class="unstyled">
          <li><a href="#">Blog</a></li>
          <li><a href="#">Link One</a></li>
          <li><a href="#">Link Two</a></li>
          <li><a href="#">Link Three</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div id="footer-floor">
    <div class="container">
      <div class="row">
        <div class="span8">
          <p>&copy; PortraitinFabric.com</p>
        </div>
      </div>
    </div>
  </div>
</footer>

<%= render :partial => 'spree/shared/google_analytics' %>

</body>